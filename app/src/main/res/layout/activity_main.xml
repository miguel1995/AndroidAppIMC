<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miguelpc.appimc.MainActivity"
    android:background="@drawable/fondo1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora IMC"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_centerHorizontal = "true"
        android:id="@+id/tvTitulo"
        android:layout_marginTop="40dp"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <EditText
        android:inputType="number"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:hint="Ingrese su peso en (kg)"
        android:id="@+id/etPeso"
        android:layout_below="@id/tvTitulo"
        android:background="#FFFFFF"/>

    <EditText
        android:inputType="numberDecimal"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:hint="Ingrese su estatura (m)"
        android:id="@+id/etTalla"
        android:layout_below="@id/etPeso"
        android:background="#FFFFFF"/>
    
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Calcular"
        android:id="@+id/btnCalcular"
        android:layout_below="@+id/etTalla"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btnCalcular"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvResultado"
        />

</RelativeLayout>
